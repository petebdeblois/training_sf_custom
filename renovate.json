{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    "group:allNonMajor"
  ],
  "prConcurrentLimit": 3,
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "matchPackageNames": [
        "neutrino"
      ],
      "enabled": false,
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
